{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": ["src/**/*"]
}
